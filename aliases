alias ezsh="$EDITOR $HOME/.zshrc"
alias szsh="source $HOME/.zshrc"

# op
alias git='op run -- git'

# elixir
alias servex='elixir --sname web -S mix phx.server'
alias meshex='iex --sname iex --remsh web@jM1'

r_iex() {
	aws ecs execute-command \
	--cluster $1 \
	--container $2 \
	--task $3 \
	--command "bin/$4 remote" \
	--interactive
}

# postgres
alias psql='psql -U postgres -d postgres'

# random
alias myip='host myip.opendns.com resolver1.opendns.com'
alias tx=tmuxinator
alias browse='open -a /Applications/Firefox\ Developer\ Edition.App'
